<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="——————选择登陆方式——————"
            android:layout_centerInParent="true"
            android:textAppearance="?android:textAppearanceMedium"/>
        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_clear_black_48dp"/>
    </RelativeLayout>
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/register_weiXin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button_register_green"
            android:layout_margin="8dp"
            android:text="微信登陆"
            android:textColor="@android:color/holo_green_light"
            android:textAppearance="?android:textAppearanceLarge"/>

        <Button
            android:id="@+id/register_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button_register_blue"
            android:layout_margin="8dp"
            android:text="QQ登录"
            android:textColor="@android:color/holo_blue_light"
            android:textAppearance="?android:textAppearanceLarge"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="or"
            android:textAppearance="?android:textAppearanceLarge"/>
        <Button
            android:id="@+id/login_self"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/shape_button_login_orange"
            android:text="教宝账号登录"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceLarge"/>
        <Button
            android:id="@+id/register_self"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="快速注册"
            android:textColor="@android:color/holo_orange_light"
            style="?android:attr/borderlessButtonStyle"
            android:textAppearance="?android:textAppearanceLarge"/>
    </LinearLayout>
</LinearLayout>
