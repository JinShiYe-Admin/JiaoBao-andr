<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.work.jsy.jiaobao2.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMenu"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llayout_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imagbtn_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/focused_ic_home" />

            <TextView
                android:id="@+id/tv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first"
                android:textColor="@color/color_focus_change" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imagbtn_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/focused_ic_assigment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second"
                android:textColor="@color/color_focus_change" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_third"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imagbtn_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/focused_ic_card" />

            <TextView
                android:id="@+id/tv_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/third"
                android:textColor="@color/color_focus_change" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_fourth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imagbtn_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/focusd_ic_bookmark" />

            <TextView
                android:id="@+id/tv_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fourth"
                android:textColor="@color/color_focus_change" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_fifth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imagbtn_fifth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/focused_ic_chrome" />

            <TextView
                android:id="@+id/tv_fifth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fifth"
                android:textColor="@color/color_focus_change" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
